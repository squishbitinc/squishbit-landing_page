# frozen_string_literal: true

# Gemfile for local development with GitHub Pages
# Mirrors the environment that GitHub Pages uses so you get the same
# versions of Jekyll and its approved plugins locally.
#
# Usage:
#   bundle install
#   bundle exec jekyll serve

source "https://rubygems.org"

# Meta gem that pins Jekyll and the set of supported plugins used by GitHub Pages.
# This includes jekyll-seo-tag, jekyll-sitemap, jekyll-feed, etc.
gem "github-pages", group: :jekyll_plugins

# Required for `bundle exec jekyll serve` on Ruby 3+
gem "webrick", "~> 1.8"
